{
  "name": "@auntie-marlenes/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "dev:email": "email dev --port 3005",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-types": "tsc",
    "prettier": "prettier . --ignore-path .gitignore '**/*.+(js|mjs|jsx|json|ts|tsx|css|html|md)'",
    "format": "pnpm prettier --write",
    "check-format": "pnpm prettier --list-different",
    "preinstall": "pnpm dlx only-allow pnpm",
    "env:pull": "vercel env pull",
    "db:studio": "cd ../../packages/db && pnpm db:studio"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc-files --noEmit --project ./tsconfig.json"
    ],
    "**/*.+(js|jsx|json|ts|tsx|html|md)": [
      "prettier --ignore-path .gitignore --write",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "@auntie-marlenes/db": "workspace:*",
    "@fortawesome/fontawesome-pro": "^7.0.1",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-brands-svg-icons": "^7.0.1",
    "@fortawesome/pro-duotone-svg-icons": "^7.0.1",
    "@fortawesome/pro-light-svg-icons": "^7.0.1",
    "@fortawesome/pro-regular-svg-icons": "^7.0.1",
    "@fortawesome/pro-solid-svg-icons": "^7.0.1",
    "@fortawesome/pro-thin-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@fortawesome/sharp-regular-svg-icons": "^7.0.1",
    "@fortawesome/sharp-solid-svg-icons": "^7.0.1",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/adapter-neon": "^6.15.0",
    "@prisma/client": "6.15.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/nextjs": "^10.10.0",
    "@vercel/analytics": "^1.2.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^17.2.2",
    "formik": "^2.4.5",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "is-ci-cli": "^2.2.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "beta",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-runner-eslint": "^2.2.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^16.1.6",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.2"
  }
}
